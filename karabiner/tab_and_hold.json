{
  "title": "Tab and hold",
  "rules": [
    {
      "description": "Tab left_control to press escape",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "caps_lock",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "caps_lock",
              "lazy": true
            }
          ],
          "to_after_key_up": [
            {
              "select_input_source": {
                "language": "en"
              }
            }
          ],
          "to_if_alone": [
            {
              "key_code": "escape"
            }
          ],
          "parameters": {
            "basic.to_if_alone_timeout_milliseconds": 200
          }
        }
      ]
    },
    {
      "description": "Tab right_control to press spacebar (spacebar priority)",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "right_control",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to_if_alone": [
            {
              "key_code": "spacebar"
            }
          ],
          "to_if_held_down": [
            {
                "key_code": "right_control"
            }
          ],
          "to_delayed_action": {
            "to_if_canceled": [
              {
                "key_code": "spacebar"
              }
            ]
          },
          "parameters": {
            "basic.to_if_alone_timeout_milliseconds": 500,
            "basic.to_if_held_down_threshold_milliseconds": 150,
            "basic.to_delayed_action_delay_milliseconds": 150
          }
        }
      ]
    },
    {
      "description": "Tab right_command to press enter",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "right_command",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "right_command",
              "lazy": true
            }
          ],
          "to_if_alone": [
            {
              "key_code": "return_or_enter"
            }
          ],
          "parameters": {
            "basic.to_if_alone_timeout_milliseconds": 200
          }
        }
      ]
    }
  ]
}
