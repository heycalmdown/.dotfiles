# This is Git's per-user configuration file.
[includeIf "gitdir:~/.dotfiles/"]
  path = ~/.dotfiles/gitconfig-personal
[includeIf "gitdir:~/Development/"]
  path = ~/.dotfiles/gitconfig-personal
[includeIf "gitdir:~/dev/"]
  path = ~/.dotfiles/gitconfig-personal
[includeIf "gitdir:~/dev/codebrick/"]
  path = ~/.dotfiles/gitconfig-cb
[includeIf "gitdir:~/Development/codebrick/"]
  path = ~/.dotfiles/gitconfig-personal

[core]
	excludesfile = /Users/kson/.gitignore_global
	pager = delta --plus-style="#012800" --minus-style="#340001"
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /Applications/Sourcetree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true

[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[interactive]
	diffFilter = delta --color-only

[pull]
	ff = only
