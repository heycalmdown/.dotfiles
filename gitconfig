# This is Git's per-user configuration file.
[includeIf "gitdir:~/Exercism/"]
  path = ~/.dotfiles/gitconfig-personal
[includeIf "gitdir:~/.dotfiles/"]
  path = ~/.dotfiles/gitconfig-personal
[includeIf "gitdir:~/Development/"]
  path = ~/.dotfiles/gitconfig-personal
[includeIf "gitdir:~/Development/git/"]
  path = ~/.dotfiles/gitconfig-ea
[includeIf "gitdir:~/Development/gitlab/"]
  path = ~/.dotfiles/gitconfig-ea

[core]
	excludesfile = /Users/kson/.gitignore_global
	pager = delta --plus-color="#012800" --minus-color="#340001" --theme='Monokai Extended'
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /Applications/Sourcetree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true

[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[interactive]
	diffFilter = delta --color-only

